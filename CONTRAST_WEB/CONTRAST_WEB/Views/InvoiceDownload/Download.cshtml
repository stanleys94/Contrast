@model IList<CONTRAST_WEB.Models.InvoiceHelper>

@{
    ViewBag.Title = "INVOICE";
    Layout = "~/Views/Shared/_LayoutLg.cshtml";
    var a = Model;
    DateTime now = DateTime.Now;
    List<int> count = ViewBag.Count;
}

@using (Html.BeginForm("Print", "InvoiceDownload", FormMethod.Post))
{

    <button type="submit" style="float:right"> PRINT </button>
    for (int i = 0; i < Model.Count(); i++)
    {
        @Html.HiddenFor(m => m[i].loged_employee.code)
        @Html.HiddenFor(m => m[i].loged_employee.name)

        @Html.HiddenFor(m => m[i].invoice.amount_1)
        @Html.HiddenFor(m => m[i].invoice.amount_2)
        @Html.HiddenFor(m => m[i].invoice.amount_3)
        @Html.HiddenFor(m => m[i].invoice.amount_4)
        @Html.HiddenFor(m => m[i].invoice.amount_5)
        @Html.HiddenFor(m => m[i].invoice.amount_6)

        @Html.HiddenFor(m => m[i].invoice.amount_total)
        @Html.HiddenFor(m => m[i].invoice.bank_account)
        @Html.HiddenFor(m => m[i].invoice.cost_center)
        @Html.HiddenFor(m => m[i].invoice.create_date)

        @Html.HiddenFor(m => m[i].invoice.destination_1)
        @Html.HiddenFor(m => m[i].invoice.destination_2)
        @Html.HiddenFor(m => m[i].invoice.destination_3)
        @Html.HiddenFor(m => m[i].invoice.destination_4)
        @Html.HiddenFor(m => m[i].invoice.destination_5)
        @Html.HiddenFor(m => m[i].invoice.destination_6)

        @Html.HiddenFor(m => m[i].invoice.Duration_1)
        @Html.HiddenFor(m => m[i].invoice.Duration_2)
        @Html.HiddenFor(m => m[i].invoice.Duration_3)
        @Html.HiddenFor(m => m[i].invoice.Duration_4)
        @Html.HiddenFor(m => m[i].invoice.Duration_5)
        @Html.HiddenFor(m => m[i].invoice.Duration_6)

        @Html.HiddenFor(m => m[i].invoice.employee_input)

        @Html.HiddenFor(m => m[i].invoice.endDate_1)
        @Html.HiddenFor(m => m[i].invoice.endDate_2)
        @Html.HiddenFor(m => m[i].invoice.endDate_3)
        @Html.HiddenFor(m => m[i].invoice.endDate_4)
        @Html.HiddenFor(m => m[i].invoice.endDate_5)
        @Html.HiddenFor(m => m[i].invoice.endDate_6)

        @Html.HiddenFor(m => m[i].invoice.group_code)

        @Html.HiddenFor(m => m[i].invoice.hotel_flight_name_1)
        @Html.HiddenFor(m => m[i].invoice.hotel_flight_name_2)
        @Html.HiddenFor(m => m[i].invoice.hotel_flight_name_3)
        @Html.HiddenFor(m => m[i].invoice.hotel_flight_name_4)
        @Html.HiddenFor(m => m[i].invoice.hotel_flight_name_5)
        @Html.HiddenFor(m => m[i].invoice.hotel_flight_name_6)

        @Html.HiddenFor(m => m[i].invoice.id_data)
        @Html.HiddenFor(m => m[i].invoice.invoice_number)
        @Html.HiddenFor(m => m[i].invoice.jenis_transaksi)
        @Html.HiddenFor(m => m[i].invoice.name)
        @Html.HiddenFor(m => m[i].invoice.no_reg)
        @Html.HiddenFor(m => m[i].invoice.qty)

        @Html.HiddenFor(m => m[i].invoice.startDate_1)
        @Html.HiddenFor(m => m[i].invoice.startDate_2)
        @Html.HiddenFor(m => m[i].invoice.startDate_3)
        @Html.HiddenFor(m => m[i].invoice.startDate_4)
        @Html.HiddenFor(m => m[i].invoice.startDate_5)
        @Html.HiddenFor(m => m[i].invoice.startDate_6)

        @Html.HiddenFor(m => m[i].invoice.tax_invoice_number)
        @Html.HiddenFor(m => m[i].invoice.vendor_code)
        @Html.HiddenFor(m => m[i].invoice.vendor_name)
        @Html.HiddenFor(m => m[i].invoice.wbs_no)
        for (int k = 0; k < Model[i].from.Count(); k++)
        {
            @Html.HiddenFor(m => m[i].from[k].City)
            @Html.HiddenFor(m => m[i].from[k].Destination)
        }
        <div style="margin:100px 0px;" class="container containshad">
            <div style="margin-top:110px" class="row">
                <div class="col-md-5 col-md-offset-1">
                    @* <span><img style = "height:60px" src="~/img/tam_logo.png" /></span>*@
                    <span><img style="height:60px" src="~/img/tam_logo.PNG" /></span>
                    <span style="font-size:20px;">PT. TOYOTA ASTRA MOTOR</span>
                </div>
                <div style="width:450px; margin-bottom:10px;" class="col-md-11 col-md-offset-1"><h5 class="h5c">PURCHASE RECEIPT</h5></div>

                <div style="border-bottom:2px solid black; width:1000px; margin-bottom:20px;" class="col-md-11 col-md-offset-1"></div>

                <div class="col-md-5 col-md-offset-1"><h6 style="text-align:left; margin-top:0px;">Jl. Laks. Yos Sudarso, Sunter II</h6></div>
                <div class="col-md-5 col-md-offset-1"><h6 style="text-align:left; margin-top:0px;">ID :<strong> @Html.DisplayFor(m => m[i].invoice.group_code, new { placeholder = "Availability", @class = "form-control" })</strong></h6></div>
                @Html.HiddenFor(m => m[i].invoice.group_code)

                <div class="col-md-5 col-md-offset-1"><h6 style="text-align:left; margin-top:0px;">Jakarta Utara - Indonesia</h6></div>
                <div class="col-md-5 col-md-offset-1"><h6 style="text-align:left; margin-top:0px;">NOREG :<strong>@Html.DisplayFor(m => m[i].invoice.no_reg, new { placeholder = "Availability", @class = "form-control" })</strong></h6></div>
                @Html.HiddenFor(m => m[i].invoice.no_reg)

                <div class="col-md-5 col-md-offset-1"><h6 style="text-align:left; margin-top:0px;">Phone :62-21 - 6515551(Hunting)</h6></div>
                <div class="col-md-5 col-md-offset-1"><h6 style="text-align:left; margin-top:0px;">NAME :<strong>@Html.DisplayFor(m => m[i].invoice.name, new { placeholder = "Availability", @class = "form-control" })</strong></h6></div>
                @Html.HiddenFor(m => m[i].invoice.name)

                <div style="width:950px; margin-top:20px;" class="col-md-11 col-md-offset-1"><h5 class="h5z">DETAIL TRAVEL</h5></div>
                <table style="width:950px;margin-left:140px; border-color:transparent;background-color:transparent;">
                    <tr><th style="width:200px">From</th><th style="width:200px">To</th><th style="width:200px">Depart</th><th style="width:200px">Return</th></tr>
                    @for (int l = 0; l < count[i]; l++)
                    {
                        <tr>
                            <td>@Model[i].from[l].City</td>
                            @if (l == 0)
                            {

                                <td>@Model[i].invoice.destination_1</td>
                                <td>@Model[i].invoice.startDate_1</td>
                                <td>@Model[i].invoice.endDate_1</td>
                            }
                            else if (l == 1)
                            {
                                <td>@Model[i].invoice.destination_2</td>
                                <td>@Model[i].invoice.startDate_2</td>
                                <td>@Model[i].invoice.endDate_2</td>
                            }
                            else if (l == 3)
                            {
                                <td>@Model[i].invoice.destination_4</td>
                                <td>@Model[i].invoice.startDate_4</td>
                                <td>@Model[i].invoice.endDate_4</td>
                            }
                            else if (l == 4)
                            {
                                <td>@Model[i].invoice.destination_5</td>
                                <td>@Model[i].invoice.startDate_5</td>
                                <td>@Model[i].invoice.endDate_5</td>
                            }
                            else if (l == 5)
                            {
                                <td>@Model[i].invoice.destination_6</td>
                                <td>@Model[i].invoice.startDate_6</td>
                                <td>@Model[i].invoice.endDate_6</td>
                            }
                        </tr>
                    }
                </table>


                <div style="width:950px" class="col-md-11 col-md-offset-1"><h5 class="h5z">DESCRIPTION</h5></div>

                <div class="col-md-12 col-md-offset-1">

                    <div style="width:425px" class="col-md-6">
                        <h5 class="h5sl">VENDOR ID</h5>
                        @Html.HiddenFor(m => m[i].invoice.jenis_transaksi)
                    </div>
                    <div style="width:425px" class="col-md-6">
                        <h5 class="h5sl">VENDOR NAME</h5>
                    </div>
                    <div class="col-md-6" style="width:425px">
                        <H6 style="text-align:left; color:darkgrey;">RP. @Model[i].invoice.vendor_code @*@Html.DisplayFor(m => m.total_meal, new { placeholder = "Availability", @class = "form-control" })*@</H6>
                        @Html.HiddenFor(m => m[i].invoice.amount_1)
                        <div class="form-group input-group">
                            <H6 style="text-align:left; color:darkgrey;"></H6>
                        </div>
                    </div>
                    <div class="col-md-6" style="width:425px">
                        <H6 style="text-align:left; color:darkgrey;">@Model[i].invoice.vendor_name @*@Html.DisplayFor(m => m.total_meal, new { placeholder = "Availability", @class = "form-control" })*@</H6>
                        @Html.HiddenFor(m => m[i].invoice.vendor_code)
                        @Html.HiddenFor(m => m[i].invoice.vendor_name)
                        <div class="form-group input-group">
                            <H6 style="text-align:left; color:darkgrey;"></H6>
                        </div>
                    </div>

                    <div style="width:950px" class="col-md-11">
                        @if (Model[i].invoice.jenis_transaksi.Contains("ticket"))
                        {
                            <h5 class="h5sl">AIRLINES</h5>
                        }
                        else if (Model[i].invoice.jenis_transaksi.Contains("hotel"))
                        {
                            <h5 class="h5sl">HOTEL</h5>
                        }

                        <table table style="width:950px; border-color:transparent;background-color:transparent;">
                            <tr>
                                <th style="width:300px">@Model[i].invoice.jenis_transaksi</th>
                                <th style="width:200px">Date</th>
                                @if (Model[i].invoice.jenis_transaksi.Contains("hotel"))
                                {
                                    <th style="width:200px">Day(s)</th>
                                }
                                <th style="width:200px">Price</th>
                            </tr>
                            @for (int k = 0; k < count[i]; k++)
                            {
                                <tr>
                                    @if (k == 0)
                                    {
                                        <td>@Model[i].invoice.hotel_flight_name_1</td>
                                        <td>@Model[i].invoice.startDate_1</td>
                                        if (Model[i].invoice.jenis_transaksi.Contains("hotel"))
                                        {
                                            <td>@Model[i].invoice.Duration_1</td>
                                        }
                                        <td>@Model[i].invoice.amount_1</td>
                                    }
                                    else if (k == 1)
                                    {
                                        <td>@Model[i].invoice.hotel_flight_name_2</td>
                                        <td>@Model[i].invoice.startDate_2</td>
                                        if (Model[i].invoice.jenis_transaksi.Contains("hotel"))
                                        {
                                            <td>@Model[i].invoice.Duration_2</td>
                                        }
                                        <td>@Model[i].invoice.amount_2</td>
                                    }
                                    else if (k == 2)
                                    {
                                        <td>@Model[i].invoice.hotel_flight_name_3</td>
                                        <td>@Model[i].invoice.startDate_3</td>
                                        if (Model[i].invoice.jenis_transaksi.Contains("hotel"))
                                        {
                                            <td>@Model[i].invoice.Duration_3</td>
                                        }
                                        <td>@Model[i].invoice.amount_3</td>
                                    }
                                    else if (k == 3)
                                    {
                                        <td>@Model[i].invoice.hotel_flight_name_4</td>
                                        <td>@Model[i].invoice.startDate_4</td>
                                        if (Model[i].invoice.jenis_transaksi.Contains("hotel"))
                                        {
                                            <td>@Model[i].invoice.Duration_4</td>
                                        }
                                        <td>@Model[i].invoice.amount_4</td>
                                    }
                                    else if (k == 4)
                                    {
                                        <td>@Model[i].invoice.hotel_flight_name_5</td>
                                        <td>@Model[i].invoice.startDate_5</td>
                                        if (Model[i].invoice.jenis_transaksi.Contains("hotel"))
                                        {
                                            <td>@Model[i].invoice.Duration_5)</td>
                                        }
                                        <td>@Model[i].invoice.amount_5</td>
                                    }
                                    else if (k == 5)
                                    {
                                        <td>@Model[i].invoice.hotel_flight_name_6</td>
                                        <td>@Model[i].invoice.startDate_6</td>
                                        if (Model[i].invoice.jenis_transaksi.Contains("hotel"))
                                        {
                                            <td>@Model[i].invoice.Duration_6</td>
                                        }
                                        <td>@Model[i].invoice.amount_6</td>
                                    }
                                </tr>
                            }

                        </table>
                    </div>



                </div>


                <div class="col-md-11 col-md-offset-1 h5x">
                    <h5 class="h5a">TOTAL</h5>
                    <label>RP.&nbsp;@String.Format("{0:n0}", Model[i].invoice.amount_total) @*@Html.DisplayFor(m => m.grand_total_settlement)*@</label>
                    @Html.HiddenFor(m => m[i].invoice.amount_total)
                </div>
                <div class="col-md-11 col-md-offset-1">
                    <img style="height:200px" src="~/img/large_logo_c.png" />
                </div>
                <div class="col-md-11 col-md-offset-1"><h5 class="h5z2"></h5></div>
                <hr />
                <div class="form-group col-md-5 col-md-offset-1">
                    @*<button style="width:145px" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target=".bs-example-modal-sm">Submit</button>*@
                    @*@Html.ActionLink("Close", "Index2", "Menu")*@
                    @*<button style="width:145px" type="submit" class="btn btn-default btn-lg">CLOSE</button>*@
                    @Html.ActionLink("CLOSE", "Index", "Home")
                </div>


                <div class="form-group col-md-5 col-md-offset-1">
                    PRINTED AT @now
                </div>
            </div>


        </div>
    }
    <div class="form-group col-md-1 col-md-offset-1">
        <button type="submit">PRINT</button>
    </div>
}