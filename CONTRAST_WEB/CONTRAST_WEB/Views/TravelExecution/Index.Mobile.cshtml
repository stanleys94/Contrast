@model IList<CONTRAST_WEB.Models.vw_travel_execution_list>
@{
    ViewBag.Title = "TRAVEL EXECUTION LIST";
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
}

<div class="row">
    <div class="Absolute-Center">
        <div style="margin-top:15px;" class="col-xs-12">
            <div>
				@for(int i = 0; i < Model.Count(); i++)
				{
                var item = Model[i];
                using (Html.BeginForm("Details", "TravelExecution",Model[i]))
                {
                    @Html.AntiForgeryToken()
                    <div class="item col-xs-12">
                        <div class="thumbnail">
                            <div class="clearfix">
                                <div class="column content">
                                    <input type="image" img style="margin:5px 0px; width:auto; height:50px" src="~/img/Travel-Execution-icon-b.png" />
                                </div>

                                <div style="padding:10px 0px;max-width:400px;min-width:150px;" class="column menu">
                                    <span class="templatetext">@Html.DisplayFor(modelItem => item.group_code)</span>
									<br>
                                    <span class="designationstyle">(to @Html.DisplayFor(modelItem => item.destination_1) )</span>

                                </div>

                                <span style="float:right; padding:20px 20px;" class="glyphicon glyphicon-chevron-right"></span>
                            </div>
                        </div>
                    </div>
                }
				}
            </div>
        </div>

    </div>
</div>        

<script>
        function goBack() {
            window.history.back();
        }
</script>

