<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0 u">
    <title>CONTRAST</title>
    <link href="~/img/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Content/test.css" rel="stylesheet" />
</head>
<body style="background-color:#f5f5f5">
    <div style="box-shadow:1px 1px 3px #767676; border: 0px;" class="page-header navbar-fixed-top">
        <div style="margin:0 215px;">
	    <a href='@Url.Action("Index", "Home")'>
            <img style="float:left" width="150" src="~/img/small_logo_horizontal.png" />
            </a>
		
	@using (Html.BeginForm("Index", "PhotoEmployee", FormMethod.Post))
            {
			<span>
			<button style="color:transparent;background-color:transparent;border:0px;float:left;padding:0px;margin:0px;" type="submit">
            @*<span style="padding:6px 6px;" class="glyphicon glyphicon-question-sign white"></span>*@
            </button>
			</span>
			}
            
            @using (Html.BeginForm("LogOff", "Account"))
            {
            <span style="float:right">
                <span style="color:white">Hello, <strong>@ViewBag.Username</strong></span>
                <span>
                    <a href='@Url.Action("Edit", "PhotoEmployee")'>
                        <img style="height:50px; width:50px;border-radius: 50%;" src="@Url.Content(ViewBag.photo)" />
                    </a>
                </span>


                @*<a href="http://10.85.40.47/Auth/Logout"><span class="glyphicon glyphicon-log-out white"></span></a>*@
                <span>
                    <button style="color:transparent;background-color:transparent;border:0px;" type="submit">
                        <span style="color:white;font-size:30px;" class="glyphicon glyphicon-log-out"></span>
                    </button>
                </span>
                @*<span class="glyphicon glyphicon-log-out white"></span>*@

                @Html.AntiForgeryToken()
            </span>
            }
            

        </div>
    </div>
    <div class="well" style="padding:55px 10px 0; background: linear-gradient(to right, #0aa1e4 0%,#0aa4e6 20%,#06b9f0 64%,#06cffb 100%);">
        <div id="header-row" style="margin:0 auto; overflow:hidden; height:270px; width:900px;">
            <!-- container-fluid is the same as container but spans a wider viewport,
        it still has padding though so you need to remove this either by adding
        another class with no padding or inline as I did below -->
                <div class="row">
                    <!-- You originally has it set up for two columns, remove the second
                column as it is unneeded and set the first to always span all 12 columns
                even when at its smallest (xs). Set the overflow to hidden so no matter
                the height of your image it will never show outside this div-->
                    <div class="col-xs-12">
                            <!-- place your image here -->
                            <img src="~/img/newbanner.jpg" alt="company logo" style="object-fit:cover; width: 100%; height:auto; background-position:center;">
                    </div>
                </div>
        </div>
    </div>
    <hr style="margin:10px 0px 0px 0px" />
    
    <div style="padding:0 130px" class="container body-content">
        @RenderBody()
    </div>
    <footer class="footer modal-footer">
        <p style="text-align:center">&copy; @DateTime.Now.Year - PT Toyota Astra Motor</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
