@model IList<CONTRAST_WEB.Models.tb_r_travel_dit>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutLg.cshtml";
    List<String> name = ViewBag.name;
    List<int> unit_code = ViewBag.unit_code;
}


<div style="height:100px; padding:60px 0 0 0;" class="well navbar-fixed-top">
    <ol class="breadcrumb">
        <li>
            @using (Html.BeginForm("Index", "Home"))
            {
                <button type="submit" style="border:0px; margin:0; background-color:transparent; padding:0px; color:dimgrey">Home</button>
            }
        </li>
        <li class="breadcrumb-item"><a style="color:gray;" href="javascript:void(0);" onclick="history.go(-1);">Upload DIT</a></li>
        <li class="breadcrumb-item active">View DIT</li>
    </ol>
</div>

<div class="container">
    <div style="margin-top:120px;" id="products" class="row list-group _3EibU">
        <div style="width:100%;text-align:left;height:500px;overflow-y:scroll;border:0px;" class="clearfix">
            <div style="padding:0 5px">
                <table class="table table-striped table-condensed" style="text-align:center;">
                    <tr style="color:white">
                        <th class="" style="background-color:deepskyblue; text-align:center; border-right:1px solid white;">
                            ID
                        </th>
                        <th style="background-color:deepskyblue; text-align:center; border-right:1px solid white;">
                            NOREG
                        </th>
                        <th style="background-color:deepskyblue; text-align:center; border-right:1px solid white;">
                            NAME
                        </th>
                        <th style="background-color:deepskyblue; text-align:center; border-right:1px solid white;">
                            PERIOD
                        </th>
                        <th style="background-color:deepskyblue; text-align:center; border-right:1px solid white;">
                            DESTINATION
                        </th>
                        <th style="background-color:deepskyblue; text-align:center; border-right:1px solid white;">
                            Created Date
                        </th>
                        <th style="background-color:deepskyblue; text-align:center; border-right:1px solid white;">
                            Operation
                        </th>
                    </tr>
                    @using (Html.BeginForm("Delete", "TravelDit", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        for (int k = 0; k < Model.Count(); k++)
                        {

                            <tr class="table-responsive">
                                <td class="td">
                                    @Html.DisplayFor(Model => Model[k].id_dit)
                                    @Html.HiddenFor(Model => Model[k].id_dit,new {@Value = Model[k].id_dit })
                                </td>
                                <td class="td">
                                    @Html.DisplayFor(Model => Model[k].no_reg)
                                    @Html.HiddenFor(Model => Model[k].no_reg)
                                </td>
                                <td class="td">
                                    @Html.DisplayFor(Model => name[k])
                                    @Html.HiddenFor(Model => name[k])
                                </td>
                                <td class="td">
                                    @Html.DisplayFor(Model => Model[k].periode)
                                    @Html.HiddenFor(Model => Model[k].periode)
                                </td>
                                <td class="td">
                                    @Html.DisplayFor(Model => Model[k].destination_city)
                                    @Html.HiddenFor(Model => Model[k].id_destination_city)
                                </td>
                                <td class="td">
                                    @Html.DisplayFor(Model => Model[k].create_date)
                                    @Html.HiddenFor(Model => Model[k].create_date)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = Model[k].id_dit }, new { @class = "btn btn-xs btn-default" })*@
                                    @*@Html.ActionLink("Details", "Details", new { id = Model[k].id_dit }, new { @class = "btn btn-xs btn-info" })*@
                                    @*@Html.ActionLink("DELETE", "Delete", new { id = Model[k].id_dit }, new { @class = "btn btn-xs btn-danger" , @name="delete", @Value=@Model[k].id_dit })*@
                                    <button type="submit" class="btn btn-xs btn-danger" name="delete" value=@k >Delete</button>
                                </td>
                            </tr>
                        }
                    }
                </table>


                <!--
                <div class="row">
                    <div style="margin: 20px 0" class="col-sm-7">
                    </div>
                    <div class="col-sm-5">
                        @*c@grid.PagerList(mode: WebGridPagerModes.All, paginationStyle: "pagination pagination-small pagination-right")*@
                    </div>
                </div>
                -->
            </div>

        </div>


    </div>
</div>
