@model List<CONTRAST_WEB.Models.tb_r_travel_request_comment>
@{
    ViewBag.Title = "DETAIL TRAVEL STATUS";
    Layout = "~/Views/Shared/_LayoutLg.cshtml";

}

<div class="container">
    <div style="margin-top:100px" class="row">
        <div class="col-md-8 col-md-offset-1"><h4 style="text-align:left;">COMMENT COMMENT </h4></div>
        <div class="col-md-3"></div>

        <div style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif" class="col-md-5 col-md-offset-1">
            <h5 class="h5a">Comment :@ViewBag.group_code</h5>
            @for (int k = 0; k < Model.Count(); k++)
            {
                @Html.DisplayFor(m => m[k].comment, new { @readonly = "readonly" })
                <br />
            }

            @using (Html.BeginForm("AddComment", "TravelStatus", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.TextBox("commentbox", null, new { @class = "form-control" })
                @Html.Hidden("groupcode", (object)ViewBag.group_code)
                <input type="submit" class="btn btn-info btn-lg form-control" value="Login" />
            }


        </div>

    </div>
    <hr />
</div>
